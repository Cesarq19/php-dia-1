{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <form method ='post'>
        {% if error %}
            <div class= 'alert' > {{ error.messageKey |trans(error.messageData,'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class= 'mb-3' > 
            You are logged in as {{ app.user.userIdentifier }}, <a href='{{path('app_logout')}}'>Logoout</a></div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{last_user}}" name="email" id="inputEmail" class="form-control" required> 
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate')}}"
        >
        <button class='btn btn-lg btn-primary' type="submit">Ingresar </button> 

        <a href="{{path('app_register')}}">Registrate</a>

    </form>
{% endblock %}