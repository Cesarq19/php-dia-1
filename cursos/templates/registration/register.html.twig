{% extends 'base.html.twig' %}

{% block title %}Registrate!{% endblock %}

{% block body %}
    <h1>Registro</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nombres) }}
        {{ form_row(registrationForm.apellidos) }}
        {{ form_row(registrationForm.password,{
            label:'Password'
        }) }}

        {{ form_row(registrationForm.roles) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type='submit' class='btn'>Registrate</button>

    {{ form_end(registrationForm) }}

    <hr>
     <a href="{{path('app_login')}}">Inicia Sesion</a>

{% endblock %}